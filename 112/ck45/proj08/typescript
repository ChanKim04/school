 	cout << " 2 " << flush;
 	// full queue
 	q3.append(22);
 	q3.append(33);
 	q3.append(44);
 	ArrayQueue<int> q5(q3);
	assert( q5.isFull() );
	assert( !q5.isEmpty() );
